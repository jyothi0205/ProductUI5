<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <f:SimpleForm id="iDSimpleForm" title="Product and Supplier Infomation">
        <f:content>
          <Label text="{i18n>name}" />
          <Text id="idName" text="{PRODUCT_ID} - {NAME}" />
          <Label text="{i18n>color}" />
          <Text id="idColor" text="{DESCRIPTION} {TYPE_CODE}" />
          <Label text="{i18n>price}" />
          <Text id="idPrice" text="{PRICE} {CURRENCY_CODE} " />
           <Label text="Supplier Name" />
            <Text text="{Product_Nav_Supplier/COMPANY_NAME}" />
            <Label text="Email ID" />
            <Text  text="{Product_Nav_Supplier/EMAIL_ADDRESS}" />
            <Label text="City" />
            <Text text="{Product_Nav_Supplier/CITY}" />
        </f:content>
      </f:SimpleForm>
</core:FragmentDefinition>